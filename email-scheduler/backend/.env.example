# Server
PORT=4000

# Redis (BullMQ)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# PostgreSQL
DATABASE_URL="postgresql://postgres:postgres@localhost:5432/email_scheduler?schema=public"

# Ethereal Email (create account at https://ethereal.email)
# Leave empty to auto-create a test account on first run
ETHEREAL_USER=
ETHEREAL_PASS=

# Scheduler config (required for production-grade behavior)
WORKER_CONCURRENCY=5
MIN_DELAY_BETWEEN_EMAILS_MS=2000
MAX_EMAILS_PER_HOUR=200
MAX_EMAILS_PER_HOUR_PER_SENDER=50
